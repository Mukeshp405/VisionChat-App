<CapturedImagesGallery>:
    name: "Gallery"
    md_bg_color: "#1c1c1c"

    BoxLayout:
        orientation: "vertical"

        # Top AppBar
        MDTopAppBar:
            md_bg_color: "#ad7102"
            pos_hint: {'top': 1}
            size_hint_y: 0.07

            MDBoxLayout:
                orientation: 'horizontal'

                # Back Button
                MDIconButton:
                    icon: 'arrow-left-thick'
                    theme_icon_color: 'Custom'
                    icon_color: "white"
                    on_release: 
                        root.manager.current = "Home"
                        root.manager.transition.direction = "right"

                # Title
                MDLabel:
                    text: 'Captured Images'
                    halign: 'center'
                    color: 1, 1, 1, 1
                    size_hint_x: 1
                    padding: ('0dp', '0dp', '0dp', '20dp')

                # Settings Button
                MDIconButton:
                    icon: 'cog-outline'
                    theme_icon_color: 'Custom'
                    icon_color: "white"
                    on_release:
                        root.manager.current = "Setting"
                        root.manager.transition.direction = "left"

        # Scrollable Grid of Images
        ScrollView:
            MDGridLayout:
                id: gallery_grid
                cols: 2
                adaptive_height: True
                spacing: dp(10)
                padding: dp(10)
                size_hint_y: None
                width: self.minimum_width
