# Help
<Help>
    name: "Help"
    md_bg_color: "#1c1c1c"

    # Navigation Bar
    MDNavigationLayout:
        MDTopAppBar:
            md_bg_color: "#ad7102"
            pos_hint: {'top': 1}
            size_hint: (1, 0.07)

            MDBoxLayout:
                orientation: 'horizontal'
                
                # Left Arrow
                MDIconButton:
                    icon: 'arrow-left-thick'
                    theme_icon_color: 'Custom'
                    icon_color: "white"
                    on_release: 
                        root.manager.current = "Home"
                        root.manager.transition.direction = "right"
                
                # Profile Label
                MDLabel:
                    text: 'Help'
                    halign: 'center'
                    color: 1,1,1,1
                    padding: ('0dp', '0dp', '0dp', '20dp')
                
                # Setting Button
                MDIconButton:
                    icon: 'cog-outline'
                    theme_icon_color: 'Custom'
                    icon_color: "white"
                    on_release:
                        root.manager.current = "Setting"
                        root.manager.transition.direction = "left"



    MDBoxLayout:
        orientation: 'vertical'
        padding: ('30dp', '60dp', '30dp', '10dp')
        spacing: '20dp'

        MDBoxLayout:    
            md_bg_color: "#ad7102"
            orientation: 'vertical'
            padding: ('10dp', '10dp', '10dp', '10dp')
            # Feature Guide
            MDLabel:
                text: " Feature Guide"
                font_style: "H5"
                size_hint_y: None
                theme_text_color: 'Custom'
                text_color: 1,1,1,1
                height: self.texture_size[1] + dp(20)

            MDBoxLayout:
                orientation: 'vertical'
                line_color: 1,1,1,1
                padding: ('8dp', '8dp', '8dp', '8dp')
                MDLabel:
                    text: "1] Real-time private messaging"
                    color: 1,1,1,1
                MDLabel:
                    text: "2] Live face filters (Mesh, Cartoon)"
                    color: 1,1,1,1
                MDLabel:
                    text: "3] Vision Modules (Face Emotion Detection, Virtaul Paint, etc...)"
                    color: 1,1,1,1
                MDLabel:
                    text: "4] Seen / Unseen tick status"
                    color: 1,1,1,1
                

        MDBoxLayout:
            md_bg_color: "#ad7102"
            orientation: 'vertical'
            padding: ('10dp', '10dp', '10dp', '10dp')
            
            # FAQ
            MDLabel:
                text: " FAQ"
                font_style: "H5"
                size_hint_y: None
                theme_text_color: 'Custom'
                text_color: 1,1,1,1
                height: self.texture_size[1] + dp(20)
            
            MDBoxLayout:
                orientation: 'vertical'
                line_color: 1,1,1,1
                padding: ('8dp', '8dp', '8dp', '8dp')
                MDLabel:
                    text: "1] Login nahi ho raha? Internet aur credentials check"
                    color: 1,1,1,1
                MDLabel:
                    text: "2] Gallery images kahan milti hain? Profile > My Images "
                    color: 1,1,1,1
                MDLabel:
                    text: "3] Message delay ho raha hai? Internet zaruri hai"
                    color: 1,1,1,1
                
        MDBoxLayout:
            md_bg_color: "#ad7102"
            orientation: 'vertical'
            padding: ('10dp', '10dp', '10dp', '10dp')
            
            # Contact Support
            MDLabel:
                text: "Contact Support"
                font_style: "H5"
                size_hint_y: None
                theme_text_color: 'Custom'
                text_color: 1,1,1,1
                height: self.texture_size[1] + dp(20)
            
            MDBoxLayout:
                orientation: 'vertical'
                line_color: 1,1,1,1
                padding: ('8dp', '8dp', '8dp', '8dp')
                MDLabel:
                    text: "1] Email: mukeshp30080@gmail.com"
                    color: 1,1,1,1
                MDLabel:
                    text: "2] Telegram: @Mukesh_p"
                    color: 1,1,1,1
                MDLabel:
                    text: "3] GitHub: Mukeshp405"
                    color: 1,1,1,1